<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:padding="10px"
     android:scrollbars="vertical"         android:layout_height="fill_parent"
                android:orientation="vertical"
        >


    <TextView android:id="@+id/welcome" android:layout_width="fill_parent" android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/empty"
            style="@style/label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            />

    <ListView android:id="@android:id/list" android:layout_width="fill_parent" android:layout_height="wrap_content"/>

</LinearLayout>
